<!-- Week 5 - Learning Activity 2 - Step 2 -->

<!-- Content Heading -->
<% if (title) { %>
    <h1><%= title %></h1>
    <% } else {
        res.redirect('/')
    } %>

<!-- Message Block -->
<%- messages() %>

<!-- Errors Display -->
<% if (errors) { %>
    <ul class="notice">
    <% errors.array().forEach(error => { %>
        <li><%= error.msg %></li>
    <% }) %>
    </ul>
<% } %>

<!-- Inventory Editor Display -->
<form id="updateForm" action="/inv/update" method="post">
    <p>*All fields are required.</p>

    <label for="inv_make">Make:</label>
    <input type="text" name="inv_make" id="inv_make" required 
        value="<%= locals.inv_make %>" pattern="^[a-zA-Z]+$">

    <label for="inv_model">Model:</label>
    <input type="text" name="inv_model" id="inv_model" required 
        value="<%= locals.inv_model %>">

    <label for="inv_year">Year:</label>
    <input type="number" name="inv_year" id="inv_year" required
        value="<%= locals.inv_year %>" pattern="^\d{4}$" 
        placeholder="YYYY">

    <label for="inv_description">Description:</label>
    <textarea rows="5" cols="30" name="inv_description" id="inv_description" required  
        placeholder="Enter vehicle description."><%= locals.inv_description %></textarea>

    <label for="inv_image">Image Path:</label>
    <input type="text" name="inv_image" id="inv_image" required 
        value="<%= locals.inv_image %>">

    <label for="inv_thumbnail">Thumbnail Path:</label>
    <input type="text" name="inv_thumbnail" id="inv_thumbnail" required 
        value="<%= locals.inv_thumbnail %>">

    <label for="inv_price">Price:</label>
    <input type="number" name="inv_price" id="inv_price" required 
        value="<%= locals.inv_price %>" pattern="^\d+\.\d{0,2}$">

    <label for="inv_miles">Miles:</label>
    <input type="number" name="inv_miles" id="inv_miles" required 
        value="<%= locals.inv_miles %>" pattern="^\d+$">

    <label for="inv_color">Color:</label>
    <input type="text" name="inv_color" id="inv_color" required 
        value="<%= locals.inv_color %>" pattern="^[a-zA-Z]+$">

    <label for="classification_id">Classification:</label>
    <%- classificationSelect %>

    <button type="submit" disabled>Update Vehicle</button>

    <input type="hidden" name="inv_id" <% if(locals.inv_id) {%> value="<%= locals.inv_id %>"
    <% } %>>
</form>

<script src="../../js/inv-update.js"></script>
