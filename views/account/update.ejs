<!-- Content Heading -->
<% if (title) { %>
    <h1><%= title %></h1>
    <% } else {
        res.redirect('/')
    } %>

<!-- Message Block -->
<%- messages() %>

<!-- Errors Display -->
<% if (errors) { %>
    <ul class="notice">
    <% errors.array().forEach(error => { %>
        <li><%= error.msg %></li>
    <% }) %>
    </ul>
<% } %>

<!-- Account Update Display -->
<form id="updateAccountForm" action="/account/update" method="post">
    <label for="account_firstname">First Name:</label>
    <input type="text" name="account_firstname" id="account_firstname" required
        value="<%= locals.account_firstname %>" pattern="^[a-zA-Z]+$">

    <label for="account_lastname">Last Name:</label>
    <input type="text" name="account_lastname" id="account_lastname" required
        value="<%= locals.account_lastname %>" pattern="^[a-zA-Z]+$">

    <label for="account_email">Email:</label>
    <input type="email" name="account_email" id="account_email" required
        value="<%= locals.account_email %>">

    <button type="submit">Update Account</button>

    <input type="hidden" name="account_id" <% if(locals.account_id) {%> value="<%= locals.account_id %>"
    <% } %>>
</form>

<form id="changePasswordForm" action="/account/change-password" method="post">
    <label for="account_password">New Password:</label>
    <p>Password must be minimum of 12 characters and contain 1 capital letter, 1 number, and 1 special character</p>
    <input type="password" name="account_password" id="account_password"
        pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$">

    <button type="submit">Change Password</button>

    <input type="hidden" name="account_id" <% if(locals.account_id) {%> value="<%= locals.account_id %>"
    <% } %>>
</form>
