<!-- Week 4 - Learning Activity 1 - Step 2 -->

<!-- Content Heading -->
<% if (title) { %>
    <h1><%= title %></h1>
    <% } else {
        res.redirect('/')
    } %>

<!-- Message Block -->
<%- messages() %>

<!-- Account Login Display -->
<form id="login-form">
    <label for="account-email">Email Address:</label>
    <input type="text" id="login-email" name="account-email">

    <label for="account-password">Password:</label>
    <input type="text" id="login-password" name="account-password">

    <input type="submit" id="login-btn" value="Login">

    <p>No Account? <a href="/account/register">Register Now!</a></p>
</form>