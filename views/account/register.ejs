<!-- Week 4 - Learning Activity 1 - Step 3 & 4 -->

<!-- Content Heading -->
<% if (title) { %>
    <h1><%= title %></h1>
    <% } else {
        res.redirect('/')
    } %>

<!-- Message Block -->
<%- messages() %>

<!-- Account Registration Display -->
<form id="register-form" action="/account/register" method="post">
    <p>*All fields are required.</p>
    <label for="account_firstname">First Name:</label>
    <input type="text" id="reg-fname" name="account_firstname" required>

    <label for="account_lastname">Last Name:</label>
    <input type="text" id="reg-lname" name="account_lastname" required>

    <label for="account_email">Email Address:</label>
    <input type="email" id="reg-email" name="account_email"required>

    <label for="account_password">Password:</label>
    <p>Password must be minimum of 12 characters and contain 1 capital letter, 1 number, and 1 special character</p>
    <input type="text" id="reg-password" name="account_password" required>

    <input type="submit" id="reg-btn" value="Register">

</form>