<!-- Content Heading -->
<% if (title) { %>
    <h1><%= title %></h1>
    <% } else {
        res.redirect('/')
    } %>

<!-- Message Block -->
<%- messages() %>

<!-- Account Registration Display -->
<form id="register-form">
    <label for="account-firstname">First Name:</label>
    <input type="text" id="reg-fname" name="account-firstname" required>

    <label for="account-lastname">Last Name:</label>
    <input type="text" id="reg-lname" name="account-lastname" required>

    <label for="account-email">Email Address:</label>
    <input type="text" id="reg-email" name="account-email"required>

    <label for="account-password">Password:</label>
    <p>Must be min 12 characters and contain 1 capital letter, 1 number, 1 special character</p>
    <input type="text" id="reg-password" name="account-password" required>

    <input type="submit" id="reg-btn" value="Register">

</form>